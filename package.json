{
  "name": "retrospective_toolkit",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.12.13",
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@react-three/cannon": "^0.6.0",
    "@react-three/drei": "^3.2.1",
    "aws-sdk": "^2.843.0",
    "axios": "^0.21.0",
    "immer": "8.0.1",
    "jotai": "^0.12.6",
    "prop-types": "^15.7.2",
    "react": "^0.14.0",
    "react-dice-complete": "^1.2.1",
    "react-dom": "^0.0.0-experimental-7d06b80af",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "react-three-fiber": "^5.3.16",
    "resize-observer": "^1.0.0",
    "scheduler": "^0.20.1",
    "three": "^0.125.0",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "start-server": "cd server && yarn nodemon index.js",
    "start-client": "react-scripts start",
    "yarn-init": "yarn && cd server && yarn",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "testw": "yarn test --watch",
    "testc": "yarn test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lintf": "eslint . --fix && prettier --write src/ && prettier --write server/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-react": "^7.12.13",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@testing-library/user-event": "^12.6.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "babel-jest": "^26.6.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.18.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^3.10.1",
    "history": "^5.0.0",
    "http-proxy-middleware": "^1.0.6",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "supertest": "^6.1.3"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageReporters": [
      "text-summary",
      "text"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "^@react-three/cannon(.*)$": "<rootDir>/node_modules/@react-three/cannon/dist/setup.d.ts"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(three|@react-three)/)"
    ]
  }
}
