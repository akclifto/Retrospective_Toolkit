    "@react-three/cannon": "^0.5.3",
    "aws-sdk": "^2.841.0",
    "axios": "^0.21.0",
    "drei": "^2.2.20",
    "immer": "8.0.1",
    "jotai": "^0.12.6",
    "prop-types": "^15.7.2",
