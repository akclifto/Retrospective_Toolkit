{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "test": "jest",
    "testc": "yarn test --collectCoverage=true --collectCoverageFrom=**/*.js",
    "testf": "jest --forceExit",
    "testw": "jest --watch"
  },
  "dependencies": {
    "express": "^4.17.3",
    "socket.io": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "babel-jest": "^26.6.3",
    "chai": "^4.3.0",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    },
    "coverageReporters": [
      "text-summary",
      "text"
    ]
  }
}
